---
import Apple from '@/components/DownloadBtn/Apple.astro'
import Google from '@/components/DownloadBtn/Google.astro'
import QR from '@/components/DownloadBtn/QR.astro'
import Social from '@/components/Social.astro'
import { TELEGRAM_KO } from '@/constants'
import metaverse from '@/assets/home/metaverse-sot.webp'
import Form from '@/components/Form.astro'
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import { changeLanguage, t } from 'i18next'

changeLanguage('ko')
---

<Layout image="/og/contact.jpg" title={t('seo.contact.title')!} description={t('seo.contact.description')!}>
  <div class="mx-auto max-w-screen-lg px-2 py-12">
    <div
      class='grid gap-8 lg:grid-cols-[1.75fr_1fr] lg:grid-rows-[1fr_auto] lg:[grid-template-areas:"info_form"_"social_form"]'
    >
      <section class="rounded-xl bg-slate-950/80 p-6 lg:[grid-area:info]">
        <h1 class="text-5xl brand-text font-bold">{t('contact.hero.h1')}</h1>
        <p class="text-lg mt-4 tracking-wide">
          {t('contact.hero.p')}
        </p>
      </section>
      <div class="rounded-xl bg-slate-950/80 p-6 lg:[grid-area:form]">
        <Form />
      </div>
      <section class="rounded-xl bg-slate-950/80 p-6 lg:[grid-area:social] space-y-4">
        <h2 class="text-3xl brand-text font-bold">{t('contact.social.h2')}</h2>
        <Social />
      </section>
      <section class="rounded-xl bg-slate-950/80 p-6 lg:col-span-2 grid lg:grid-cols-2 gap-6">
        <div class="space-y-8">
          <h2 class="text-2xl font-bold [text-wrap:balance;]">
            {t('contact.details.h2')}
          </h2>
          <a
            href={TELEGRAM_KO}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-lg bg-intelligentBlue inline-block px-5 py-2.5 text-center text-sm font-medium transition hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300"
            >{t('contact.details.btn')}</a
          >
        </div>
        <div>
          <ul class="space-y-10">
            <li data-scroll-animation class="flex gap-4">
              <div class="bg-brandGradient rounded-lg h-full p-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-12 h-12"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold">{t('contact.details.points.0.0')}</h3>
                <p class="text-sm text-cyberLilac">
                  {t('contact.details.points.0.1')}
                </p>
              </div>
            </li>
            <li data-scroll-animation class="flex gap-4">
              <div class="bg-brandGradient rounded-lg h-full p-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-12 h-12"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"
                  ></path>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold">{t('contact.details.points.1.0')}</h3>
                <p class="text-sm text-cyberLilac">
                  {t('contact.details.points.1.1')}
                </p>
              </div>
            </li>
            <li data-scroll-animation class="flex gap-4">
              <div class="bg-brandGradient rounded-lg h-full p-2">
                <svg class="h-12 w-12" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <g fill="currentColor">
                    <path
                      d="M46.4012 50.8648C46.4012 53.2617 48.3447 55.203 50.7393 55.203C53.1362 55.203 55.0774 53.2594 55.0774 50.8648V28.3373C55.0774 25.9404 53.1362 23.9992 50.7393 23.9992C48.3424 23.9992 46.4012 25.9404 46.4012 28.3373V50.8648Z"
                    ></path>
                    <path
