---
import Layout from '@/layouts/Layout.astro'
import Partners from '@/components/Partners.astro'
import i18next, { changeLanguage, t } from 'i18next'
import { localizePath } from 'astro-i18next'
import Dashboard from '@/components/bot/Dashboard.astro'
import { CALENDLY } from '@/constants'
import Contact from '@/components/bot/Contact.astro'
import botVid from '@/assets/bot/hero.mp4'
import Ecosystem from '@/components/bot/Ecosystem.astro'
const videoSrc =
  i18next.language === 'ko'
    ? (await import('@/assets/bot/bot_intro_ko.mp4')).default
    : (await import('@/assets/bot/bot_intro_en.mp4')).default

const benefits = [
  [t('bot.benefits.points.0.0'), t('bot.benefits.points.0.1'), `bg-intelligentBlue`, 'order-0'],
  [t('bot.benefits.points.1.0'), t('bot.benefits.points.1.1'), `bg-softFire`, 'order-2'],
  [t('bot.benefits.points.2.0'), t('bot.benefits.points.2.1'), `bg-[#207DA2]`, 'order-4'],
]
---

<Layout image="/og/bot.jpg" title={t('seo.bot.title')!} description={t('seo.bot.description')!}>
  <div class="space-y-12 py-12 md:space-y-24 lg:space-y-32 md:pb-24 overflow-hidden">
    <section
      id="hero"
      class="grid min-h-[85vh] max-w-screen-xl mx-auto lg:grid-cols-2 items-center px-2 gap-6 md:grid-rows-[1fr_auto]"
    >
      <div class="grid gap-4 md:gap-8 z-10 relative">
        <h1 class="text-3xl md:text-5xl/tight font-bold text-balance">
          {t('bot.hero.h1')}
        </h1>
        <p class="md:text-2xl/tight text-pretty max-md:mb-4">{t('bot.hero.p')}</p>
        <a
          target="_blank"
          rel="noopener noreferrer"
          href={CALENDLY}
          class="rounded-lg bg-intelligentBlue px-5 py-2.5 text-center md:text-lg max-md:justify-self-start font-medium transition hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300"
          >{t('bot.hero.get-in-touch')}</a
        >
      </div>
      <div class="max-md:order-first relative">
        <div class="rounded-lg z-10 relative overflow-clip">
          <video src={botVid} width="1200" height="720" autoplay loop muted playsinline></video>
        </div>

        <div
          class:list={[
            '[animation-delay:0s]',
            'animate-blob  blur-2xl  absolute top-1/4 -left-1/4 w-1/2 aspect-square rounded-full  bg-softFire/30',
          ]}
        >
        </div>
        <div
          class:list={[
            '[animation-delay:2s]',
            'animate-blob  blur-2xl  absolute top-0 -right-1/4 w-1/2 aspect-square rounded-full  bg-neonBlue/30',
          ]}
        >
        </div>
        <div
          class:list={[
            '[animation-delay:4s]',
            'animate-blob  blur-2xl  absolute -bottom-1/2 right-1/4 w-1/2 aspect-square rounded-full  bg-intelligentBlue/30',
          ]}
        >
        </div>
      </div>
      <div class="md:col-span-2">
        <p
          class="text-center text-cyberLilac relative after:absolute after:left-1/2 after:-bottom-10 after:animate-bounce after:content-['â†“'] after:[translate:-50%] after:text-3xl"
        >
          Scroll Down
        </p>
      </div>
    </section>

    <section id="partners" class="mx-auto max-w-screen-xl">
      <Partners />
    </section>

    <section id="intro" class="bg-slate-950/80 py-32">
      <div class="mx-auto max-w-screen-lg">
        <div class="text-center space-y-4 px-2">
          <h2 class="brand-text text-3xl font-bold">{t('bot.intro.h2')}</h2>
          <p class="text-pretty md:text-lg/tight max-w-[60ch] mx-auto">{t('bot.intro.p')}</p>
        </div>
        <div class="grid md:grid-cols-[1fr_3fr] mx-auto max-w-[850px] md:gap-6 mt-12">
          <div class="text-center p-4 md:rounded-lg bg-brandGradient grid h-full place-content-center">
            <p class="leading-snug"><span class="block font-bold text-6xl mb-4">86%</span>{t('bot.intro.stat.p')}</p>
          </div>
          <div class="max-md:order-first overflow-hidden md:rounded-lg">
            <video src={`${videoSrc}#t=0.001`} width="1280" height="720" controls loop preload="metadata"></video>
          </div>
        </div>
      </div>
    </section>

    <section id="benefits" class="mx-auto max-w-screen-lg px-2">
      <div class="text-center space-y-4">
        <h2 class="text-3xl text-balance font-bold">{t('bot.benefits.h2')}</h2>
        <p class="text-pretty md:text-lg/tight max-w-[60ch] mx-auto">{t('bot.benefits.h2-sub')}</p>
      </div>
      <dl
        class="flex items-center justify-evenly gap-4 flex-wrap mt-12 before:w-8 before:aspect-square before:border-cyberLilac before:border-2 before:hidden min-[850px]:before:block before:border-dashed before:animate-spin before:[animation-duration:10s] before:rounded-full before:order-1 after:w-8 after:aspect-square after:border-cyberLilac after:border-2 after:hidden min-[850px]:after:block after:border-dashed after:animate-spin after:[animation-duration:10s] after:rounded-full after:order-3"
      >
        {
          benefits.map(([dt, dd, bg, order]) => (
            <div
              class:list={[
                bg,
                order,
                'w-56 p-4 rounded-full aspect-square text-center h-full grid place-content-center',
              ]}
            >
              <dt class="font-bold text-2xl mb-4">{dt}</dt>
              <dd class="text-sm">{dd}</dd>
            </div>
          ))
        }
      </dl>
    </section>
    <Ecosystem />
  </div>
</Layout>
