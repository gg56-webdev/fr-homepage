<style>
  #anim {
    animation-name: stack;
    animation-duration: 15s;
    animation-iteration-count: infinite;
  }

  @keyframes stack {
    6.25% {
      translate: 0 0%;
    }
    12.5%,
    18.75% {
      translate: 0 -12.5%;
    }
    25%,
    31.25% {
      translate: 0 -25%;
    }
    37.5%,
    43.75% {
      translate: 0 -37.5%;
    }
    50%,
    56.25% {
      translate: 0 -50%;
    }
    62.5%,
    68.75% {
      translate: 0 -62.5%;
    }
    75%,
    81.25% {
      translate: 0 -75%;
    }
    87.5%,
    100% {
      translate: 0 -87.5%;
    }
  }
</style>
