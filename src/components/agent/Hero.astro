---
import i18next, { t } from 'i18next'
import Coupons from '@/components/how-it-works/Coupons.astro'
import { DOWNLOAD_LINK } from '@/constants'
---

<section class="relative px-2" id="hero">
  <div class="grid items-center relative max-md:mt-24 z-10 gap-12">
    <div
      class="max-md:flex-col max-md:hidden max-md:rounded-2xl max-md:p-4 flex gap-2 rounded-full bg-slate-950/90 p-2 pe-4 items-center w-fit mx-auto"
    >
      <span class="bg-intelligentBlue shrink-0 text-white font-semibold text-sm px-3 py-1 rounded-full"
        >{t('agent.hero.banner.tag')}</span
      >
      <p class="text-center md:text-left text-pretty">{t('agent.hero.banner.message')}</p>
    </div>
    <div class="text-center space-y-8 md:space-y-12 max-w-screen-sm mx-auto">
      <h1 class="md:text-6xl/tight font-bold text-balance text-4xl">{t('agent.hero.h1')}</h1>
      <p class="text-pretty text-lg md:text-xl">{t('agent.hero.p')}</p>
      <a
        href={DOWNLOAD_LINK}
        class="rounded-lg block w-[min(100%,300px)] mx-auto bg-intelligentBlue px-5 py-2.5 text-center text-lg font-medium transition hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300"
        target="_blank"
        rel="noopener noreferrer">{t('agent.hero.cta')}</a
      >
    </div>
  </div>
  <div class="mt-28 relative z-10">
    <Coupons />
  </div>
  <div
    class:list={[
      '[animation-delay:0s]',
      'animate-blob  blur-2xl  absolute top-1/4 -left-1/4 w-1/2 aspect-square rounded-full  bg-softFire/30',
    ]}
  >
  </div>
  <div
    class:list={[
      '[animation-delay:2s]',
      'animate-blob  blur-2xl  absolute top-0 -right-1/4 w-1/2 aspect-square rounded-full  bg-neonBlue/30',
    ]}
  >
  </div>
  <div
    class:list={[
      '[animation-delay:4s]',
      'animate-blob  blur-2xl  absolute -bottom-1/2 right-1/4 w-1/2 aspect-square rounded-full  bg-intelligentBlue/30',
    ]}
  >
  </div>
</section>
