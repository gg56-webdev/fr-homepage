---
import { t } from 'i18next'
import missionTrack from '@/assets/how-it-works/missions/track.png'
import { Image } from 'astro:assets'
---

<section data-scroll-animation id="missions" class="max-w-screen-lg mx-auto px-2">
  <h2 class="font-bold text-3xl text-center text-balance mb-4" set:text={t('how-it-works.missions.h2')} />
  <div class="grid md:grid-cols-2 mt-16 items-center">
    <Image src={missionTrack} alt="Mission track" class="h-[600px] object-contain" />
    <p set:text={t('how-it-works.missions.p')} class="text-2xl" />
  </div>
</section>
