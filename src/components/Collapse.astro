---
type Props = {
  checked?: boolean
  title: string
}

const { checked = false, title } = Astro.props
---

<div
  class="has-[*:checked]:grid-rows-[auto_1fr] duration-700 grid grid-rows-[auto_0fr] text-white transition-all rounded-lg"
>
  <input
    type="radio"
    name="how"
    id="how"
    {checked}
    class="appearance-none opacity-0 col-start-1 row-start-1 peer w-full cursor-pointer h-[150%]"
  />
  <div
    class="peer-checked:text-white peer-hover:text-white text-white/50 transition col-start-1 row-start-1 font-bold text-2xl"
  >
    {title}
  </div>
  <div class="overflow-hidden peer-checked:opacity-100 opacity-0 transition text-xl">
    <div class="mt-4">
      <slot />
    </div>
  </div>
</div>
