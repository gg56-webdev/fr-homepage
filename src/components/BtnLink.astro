---
export interface Props {
  text: string;
  href: string;
  isExternal?: boolean;
}

const { text, href, isExternal = false } = Astro.props;
---

<a
  class='inline-block rounded-full bg-cyberLilac px-4 py-2 font-medium text-deepSpace ring-offset-black transition hover:bg-intelligentBlue hover:text-white hover:ring-2 hover:ring-cyberLilac hover:ring-offset-1'
  href={href}
  target={isExternal ? '_blank' : ''}
  rel={isExternal ? 'noopener noreferrer' : ''}>{text} {isExternal ? '↗' : '→'}</a
>
