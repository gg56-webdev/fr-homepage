---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'details'> {
  title: string
  name?: string
}

const { title, ...props } = Astro.props
---

<details
  {...props}
  data-scroll-animation
  class="ring-neonBlue marker:text-neonBlue rounded-lg bg-slate-950/80 transition open:ring hover:ring"
>
  <summary class="font-medium hover:cursor-pointer p-4">{title}</summary>
  <div class="prose prose-invert p-4">
    <slot />
  </div>
</details>

<script>
  document.querySelectorAll('details').forEach((el) => `#${el.id}` === location.hash && (el.open = true))
</script>
